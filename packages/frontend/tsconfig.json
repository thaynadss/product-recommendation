{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@types": ["src/types/index"],
      "@services/*": ["src/services/*"],
      "@constants/*": ["src/constants/*"],
      "@mocks/*": ["src/mocks/*"],
    }
  },
  "include": ["src"],
}
